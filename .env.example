# ============================================================
# DEXSCREENER INTELLIGENCE SYSTEM - ENVIRONMENT CONFIGURATION
# ============================================================

# -----------------------------------------------------------
# TELEGRAM BOT TOKENS
# -----------------------------------------------------------
SIGNAL_BOT_TOKEN=your_signal_bot_token_here
ALERT_BOT_TOKEN=your_alert_bot_token_here

# -----------------------------------------------------------
# CHAT IDs
# -----------------------------------------------------------
SIGNAL_CHAT_ID=your_signal_chat_id
ALERT_CHAT_ID=your_alert_chat_id
ADMIN_CHAT_ID=your_admin_chat_id

# -----------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------
DEXSCREENER_API_BASE=https://api.dexscreener.com/latest
DEXSCREENER_PAIRS_ENDPOINT=/dex/pairs
DEXSCREENER_TOKENS_ENDPOINT=/dex/tokens

# RPC Configuration (for blockchain data)
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
RPC_BACKUP_ENDPOINT=https://solana-api.projectserum.com

# -----------------------------------------------------------
# POLLING CONFIGURATION
# -----------------------------------------------------------
POLL_INTERVAL_SECONDS=30
WATCH_UPDATE_INTERVAL_SECONDS=60
HEALTH_CHECK_INTERVAL_SECONDS=300

# -----------------------------------------------------------
# SYSTEM CONFIGURATION
# -----------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/dex_intel.log
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80

# -----------------------------------------------------------
# SELF-DEFENSE THRESHOLDS (Override strategy.yaml)
# -----------------------------------------------------------
SAFE_MODE_API_ERROR_THRESHOLD=10
SAFE_MODE_LATENCY_THRESHOLD_MS=5000
SAFE_MODE_MEMORY_THRESHOLD_MB=1800

# -----------------------------------------------------------
# WATCH MODE SETTINGS
# -----------------------------------------------------------
WATCH_EXPIRY_MINUTES=30
WATCH_ESCALATION_THRESHOLD=3
MAX_CONCURRENT_WATCHES=50

# -----------------------------------------------------------
# COOLDOWN SETTINGS
# -----------------------------------------------------------
ALERT_COOLDOWN_SECONDS=300
TOKEN_COOLDOWN_MINUTES=60

# -----------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------
ENABLE_SELF_DEFENSE=true
ENABLE_WATCH_MODE=true
ENABLE_EXIT_ASSISTANT=true
ENABLE_WHALE_DETECTION=true
ENABLE_CLUSTER_DETECTION=true
